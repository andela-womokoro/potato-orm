{
    "name": "wilson/potato-orm",
    "description": "A simple PHP agnostic ORM",
    "authors": [
        {
            "name": ":Wilson Omokoro",
            "email": "wilson.omokoro@andela.com"
        }
    ],
    "require": {
        "php" : ">=5.3.0",
        "vlucas/phpdotenv": "^2.1"
    },
    "require-dev": {
        "phpunit/phpunit" : "4.*",
        "scrutinizer/ocular": "~1.1",
        "mockery/mockery": "dev-master"
    },
    "autoload": {
        "psr-4": {
           "Wilson\\Source\\": "src"
        },
        "classmap": ["src"]
    },
    "autoload-dev": {
        "psr-4": {
            "Wilson\\Test\\": "tests"
        },
        "classmap": ["tests"]
    }
}
